# Environment Configuration
# Copy to .env and fill in your values

# =============================================================================
# Database
# =============================================================================
POSTGRES_USER=lucius
POSTGRES_PASSWORD=lucius_secret
POSTGRES_DB=lucius_db
DATABASE_URL=postgresql://lucius:lucius_secret@localhost:5432/lucius_db

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# Flask
# =============================================================================
FLASK_ENV=development
SECRET_KEY=change-me-in-production-use-strong-random-key

# =============================================================================
# Multi-Tenancy
# =============================================================================
# Default tenant ID for single-tenant deployments
DEFAULT_TENANT_ID=default

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
# Set to true for JSON structured logs (recommended for production)
LOG_JSON_FORMAT=false

# =============================================================================
# NVD API (for vulnerability scanning)
# Get your API key from: https://nvd.nist.gov/developers/request-an-api-key
# =============================================================================
NVD_API_KEY=

# =============================================================================
# Twilio (for SMS notifications)
# =============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# =============================================================================
# SendGrid (for email notifications)
# =============================================================================
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=alerts@lucius.io

# =============================================================================
# Slack (for Slack notifications)
# =============================================================================
SLACK_WEBHOOK_URL=

# =============================================================================
# Security Scanning
# =============================================================================
# Safety API key for vulnerability checking
SAFETY_API_KEY=
# Semgrep token for code analysis
SEMGREP_APP_TOKEN=

# =============================================================================
# Rate Limiting
# =============================================================================
# Requests per minute for external APIs
NVD_RATE_LIMIT=30
OSV_RATE_LIMIT=100

# =============================================================================
# Caching
# =============================================================================
# CVE cache TTL in seconds (default: 1 hour)
CVE_CACHE_TTL=3600
# Scan result cache TTL in seconds (default: 5 minutes)
SCAN_CACHE_TTL=300
